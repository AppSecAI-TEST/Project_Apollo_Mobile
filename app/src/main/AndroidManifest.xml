<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projects.wesse.apollo_ui">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Products"
            android:label="Products"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Suppliers"
            android:label="@string/title_activity_suppliers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Customers"
            android:label="@string/title_activity_customers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Message"
            android:label="Messages"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Purchases"
            android:label="Purchases"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Orders"
            android:label="Orders"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Sales"
            android:label="Sales"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerView"
            android:label="View"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProductView"
            android:label="View"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PurchasesView"
            android:label="View"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SupplierView"
            android:label="View"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>